<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1.Image">
    <ContentPage.Content>
        <StackLayout HorizontalOptions="Center" VerticalOptions="Center">
            <ActivityIndicator IsRunning ="{Binding Source={x:Reference imageframe}, Path=IsLoading }"></ActivityIndicator>
            <Image x:Name="imageframe"></Image>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>